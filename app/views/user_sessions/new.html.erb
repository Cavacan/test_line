<h2>ログイン</h2>
<%= form_with url: login_path do |f| %>
  <%= f.label :email %>
  <%= f.email_field :email %>
  
  <%= f.label :password %>
  <%= f.password_field :password %>
  
  <%= f.submit "ログイン" %>
<% end %>

<%= link_to 'LINE login', line_login_api_login_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium" %>
